{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "config",
  "type": "object",
  "$merge": {
    "source": { "$ref": "content" },
    "with": {
      "properties": {
        "_extensions": {
          "type": "object",
          "title": "Extensions",
          "default": {}
        },
        "_enabledExtensions": {
          "type": "object",
          "title": "Enabled extensions",
          "default": {}
        },
        "_theme": {
          "type": "string",
          "title": "Theme",
          "default": "adapt-contrib-vanilla"
        },
        "_menu": {
          "type": "string",
          "title": "Menu",
          "default": "adapt-contrib-boxMenu"
        },
        "_courseId": {
          "type": "string",
          "isObjectId": true,
          "title": "Course id"
        },
        "_completionCriteria": {
          "type": "object",
          "title": "Completion criteria",
          "default": {},
          "properties": {
            "_requireContentCompleted": {
              "type": "boolean",
              "title": "Require content completion",
              "description": "Specifies that all content on the course must be completed",
              "default": true
            },
            "_requireAssessmentCompleted": {
              "type": "boolean",
              "title": "Require assessment completion",
              "description": "Specifies that all assessments on the course must be completed",
              "default": false
            }
          }
        },
        "_defaultLanguage": {
          "type": "string",
          "title": "Default Language",
          "default": "en"
        },
        "_defaultDirection": {
          "type": "string",
          "title": "Text Direction",
          "default": "ltr",
          "enum": [
            "ltr",
            "rtl"
          ],
          "_backboneForms": "Select"
        },
        "_accessibility": {
          "type": "object",
          "title": "Accessibility",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enabled?",
              "default": true
            },
            "_isTextProcessorEnabled": {
              "type": "boolean",
              "title": "Enable text reader support?",
              "description": "Adds focusing to assist text reader software",
              "default": false
            },
            "_isSkipNavigationEnabled": {
              "type": "boolean",
              "title": "Enable Skip Navigation link?",
              "description": "Adds a link to the start of the page to allow assistive technology users to skip over the navigation and straight into to the page content.",
              "default": true
            },
            "_ariaLevels": {
              "type": "object",
              "title": "ARIA Levels",
              "description": "Defines what value to assign to the aria-level attribute for the various elements of Adapt",
              "default": {},
              "properties": {
                "_menu": {
                  "type": "number",
                  "title": "Menu element ARIA level",
                  "default": 1,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_menuItem": {
                  "type": "number",
                  "title": "Menu Item element ARIA level",
                  "default": 2,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_page": {
                  "type": "number",
                  "title": "Page element ARIA level",
                  "default": 1,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_article": {
                  "type": "number",
                  "title": "Article element ARIA level",
                  "default": 2,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_block": {
                  "type": "number",
                  "title": "Block element ARIA level",
                  "default": 3,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_component": {
                  "type": "number",
                  "title": "Component element ARIA level",
                  "default": 4,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_componentItem": {
                  "type": "number",
                  "title": "Component Item element ARIA level",
                  "default": 5,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                },
                "_notify": {
                  "type": "number",
                  "title": "Notify popup title ARIA level",
                  "default": 1,
                  "_backboneForms": {
                    "validators": [
                      "number"
                    ]
                  }
                }
              }
            },
            "_options": {
              "type": "object",
              "title": "Accessibility Extended Options",
              "description": "Optional object that can be used to customize the accessibility behaviour",
              "default": {},
              "_backboneForms": {
                "type": "CodeEditor",
                "mode": "json"
              }
            }
          }
        },
        "screenSize": {
          "type": "object",
          "title": "Screen Size",
          "default": {},
          "properties": {
            "small": {
              "type": "number",
              "title": "Small",
              "description": "Pixel width for the small breakpoint, e.g. cellphones",
              "default": 520,
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            },
            "medium": {
              "type": "number",
              "title": "Medium",
              "description": "Pixel width for the medium breakpoint, e.g. tablet devices",
              "default": 760,
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            },
            "large": {
              "type": "number",
              "title": "Large",
              "description": "Pixel width for the large breakpoint, e.g. laptop/desktop computers",
              "default": 900,
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            }
          }
        },
        "_questionWeight": {
          "type": "number",
          "title": "Question Weight",
          "default": 1,
          "_adapt": {
            "isSetting": true
          },
          "_backboneForms": {
            "validators": [
              "number"
            ]
          }
        },
        "_drawer": {
          "type": "object",
          "title": "Drawer",
          "default": {},
          "properties": {
            "_showEasing": {
              "type": "string",
              "title": "Show Easing",
              "default": "easeOutQuart",
              "enum": [
                "easeInSine",
                "easeOutSine",
                "easeInOutSine",
                "easeInQuad",
                "easeOutQuad",
                "easeInOutQuad",
                "easeInCubic",
                "easeOutCubic",
                "easeInOutCubic",
                "easeInQuart",
                "easeOutQuart",
                "easeInOutQuart",
                "easeInQuint",
                "easeOutQuint",
                "easeInOutQuint",
                "easeInExpo",
                "easeOutExpo",
                "easeInOutExpo",
                "easeInCirc",
                "easeOutCirc",
                "easeInOutCirc",
                "easeInBack",
                "easeOutBack",
                "easeInOutBack",
                "easeInElastic",
                "easeOutElastic",
                "easeInOutElastic",
                "easeInBounce",
                "easeOutBounce",
                "easeInOutBounce"
              ],
              "_backboneForms": "Select"
            },
            "_hideEasing": {
              "type": "string",
              "title": "Hide Easing",
              "default": "easeInQuart",
              "enum": [
                "easeInSine",
                "easeOutSine",
                "easeInOutSine",
                "easeInQuad",
                "easeOutQuad",
                "easeInOutQuad",
                "easeInCubic",
                "easeOutCubic",
                "easeInOutCubic",
                "easeInQuart",
                "easeOutQuart",
                "easeInOutQuart",
                "easeInQuint",
                "easeOutQuint",
                "easeInOutQuint",
                "easeInExpo",
                "easeOutExpo",
                "easeInOutExpo",
                "easeInCirc",
                "easeOutCirc",
                "easeInOutCirc",
                "easeInBack",
                "easeOutBack",
                "easeInOutBack",
                "easeInElastic",
                "easeOutElastic",
                "easeInOutElastic",
                "easeInBounce",
                "easeOutBounce",
                "easeInOutBounce"
              ],
              "_backboneForms": "Select"
            },
            "_duration": {
              "type": "number",
              "title": "Duration",
              "default": 400,
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            }
          },
          "_adapt": {
            "isSetting": false
          }
        },
        "_generateSourcemap": {
          "type": "boolean",
          "title": "Generate sourcemaps?",
          "description": "Allows the course JavaScript & CSS to be debugged via the browser's developer tools.",
          "default": false,
          "_adapt": {
            "isSetting": true
          }
        },
        "_forceRouteLocking": {
          "type": "boolean",
          "title": "Enforce route locking?",
          "description": "If locking is enabled, this setting prevents navigating to locked routes",
          "default": true,
          "_adapt": {
            "isSetting": true
          }
        },
        "_disableAnimationFor": {
          "type": "array",
          "title": "Disable animation for",
          "description": "Allows you to disable some animations (e.g. the drawer close animation) on platform(s) where they are not performing well, using CSS selectors to target the relevant platform(s) via the classes on the HTML element.",
          "default": [],
          "_adapt": {
            "isSetting": true
          },
          "_backboneForms": "List"
        },
        "_logging": {
          "type": "object",
          "title": "Logging",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enabled?",
              "default": true
            },
            "_level": {
              "type": "string",
              "title": "Log Level",
              "default": "info",
              "enum": [
                "debug",
                "info",
                "warn",
                "error",
                "fatal"
              ],
              "_backboneForms": "Select"
            },
            "_console": {
              "type": "boolean",
              "title": "Log to browser console?",
              "default": true
            }
          }
        },
        "_scrollingContainer": {
          "type": "object",
          "title": "iFrame and Screen Reader scrolling support",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enabled?",
              "default": false
            },
            "_limitToSelector": {
              "type": "string",
              "title": "Limit to selector",
              "description": "CSS selector to match against the HTML element when determining whether this should be active or not.",
              "default": ""
            }
          }
        },
        "themeSettings": {
          "type": "object",
          "title": "Theme settings",
          "default": {}
        },
        "_themePreset": {
          "type": "string",
          "isObjectId": true,
          "title": "Theme preset"
        }
      }
    }
  }
}
