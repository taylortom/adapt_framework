{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "component",
  "type": "object",
  "$merge": {
    "source": { "$ref": "content" },
    "with": {
      "properties": {
        "_componentType": {
          "type": "string",
          "isObjectId": true,
          "title": "Component type",
          "_adapt": {
            "editorOnly": true
          },
          "_unrecognisedFields": {
            "ref": "componenttype"
          }
        },
        "_component": {
          "type": "string",
          "title": "Component",
          "default": ""
        },
        "_layout": {
          "type": "string",
          "title": "Layout",
          "default": ""
        },
        "_disableAccessibilityState": {
          "type": "boolean",
          "title": "Is the accessibility state disabled?",
          "description": "Controls whether the user can tab to a hidden label that describes the completion state of the component",
          "default": false,
          "_adapt": {
            "isSetting": true
          }
        },
        "_onScreen": {
          "type": "object",
          "title": "On-screen classes",
          "description": "These settings allow you to attach classes to the component when it is within the browser's viewport; helpful for running CSS-based animations on components as they scroll into view.",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enabled?",
              "default": false,
              "_adapt": {
                "isSetting": true
              }
            },
            "_classes": {
              "type": "string",
              "title": "Classes",
              "description": "The CSS class(es) to add to the component element.",
              "default": "",
              "_adapt": {
                "isSetting": true
              }
            },
            "_percentInviewVertical": {
              "type": "number",
              "title": "Percent in view",
              "description": "Controls what percentage of the component's height needs to be in the viewport in order for the CSS class(es) to be added.",
              "default": 50,
              "_adapt": {
                "isSetting": true
              },
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            }
          }
        },
        "_extensions": {
          "type": "object",
          "title": "Extensions",
          "default": {}
        },
        "themeSettings": {
          "type": "object",
          "title": "Theme settings",
          "default": {}
        },
        "properties": {
          "type": "object",
          "title": "Properties",
          "default": {}
        },
        "_colorLabel": {
          "type": "string",
          "title": "Color label",
          "default": "",
          "_adapt": {
            "editorOnly": true
          }
        }
      }
    }
  }
}
