{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "article",
  "type": "object",
  "$merge": {
    "source": { "$ref": "content" },
    "with": {
      "properties": {
        "instruction": {
          "type": "string",
          "title": "Instruction text",
          "default": "",
          "_adapt": {
            "translatable": true
          }
        },
        "_onScreen": {
          "type": "object",
          "title": "On-screen classes",
          "description": "These settings allow you to attach classes to the article when it is within the browser's viewport; helpful for running CSS-based animations on articles as they scroll into view.",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enabled?",
              "default": false,
              "_adapt": {
                "isSetting": true
              }
            },
            "_classes": {
              "type": "string",
              "title": "Classes",
              "description": "The CSS class(es) to add to the article element.",
              "default": "",
              "_adapt": {
                "isSetting": true
              }
            },
            "_percentInviewVertical": {
              "type": "number",
              "title": "Percent in view",
              "description": "Controls what percentage of the article's height needs to be in the viewport in order for the CSS class(es) to be added.",
              "default": 50,
              "_adapt": {
                "isSetting": true
              },
              "_backboneForms": {
                "validators": [
                  "number"
                ]
              }
            }
          }
        },
        "_extensions": {
          "type": "object",
          "title": "Extensions",
          "default": {}
        },
        "themeSettings": {
          "type": "object",
          "title": "Theme settings",
          "default": {}
        }
      }
    }
  }
}
